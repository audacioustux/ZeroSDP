{
    "$schema": "https://turborepo.org/schema.json",
    "globalEnv": [
        "GIT_ORIGIN"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "build/**"
            ]
        },
        "manifests#cdk8s:import": {
            "outputs": [
                "imports/**"
            ],
            "inputs": [
                "cdk8s.yaml"
            ]
        },
        "manifests#helm:load": {
            "inputs": [
                "helm-repos.yaml"
            ]
        },
        "manifests#cdk8s:synth": {
            "dependsOn": [
                "build",
                "manifests#cdk8s:import",
                "manifests#helm:load"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "bootstrap#pulumi:stack:select": {
            "env": [
                "PULUMI_*"
            ]
        },
        "bootstrap#pulumi:up": {
            "dependsOn": [
                "build",
                "pulumi:stack:select",
                "manifests#cdk8s:synth"
            ],
            "env": [
                "PULUMI_*"
            ]
        },
        "bootstrap": {
            "dependsOn": [
                "bootstrap#pulumi:up"
            ]
        }
    }
}